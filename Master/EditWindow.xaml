<Window x:Class="Master.EditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Master"
        mc:Ignorable="d"
        Title="EditWindow" Height="450" Width="800">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <Label Content="Partner ID"/>
                <TextBox Text="{Binding PartnerId, Mode=TwoWay}" IsReadOnly="True"/>
                <Label Content="Partner Type"/>
                <TextBox Text="{Binding PartnerType, Mode=TwoWay}"/>
                <Label Content="Partner Name"/>
                <TextBox Text="{Binding PartnerName, Mode=TwoWay}"/>
                <Label Content="Director"/>
                <TextBox Text="{Binding Director, Mode=TwoWay}"/>
                <Label Content="Email"/>
                <TextBox Text="{Binding Mail, Mode=TwoWay}"/>
                <Label Content="Phone"/>
                <TextBox Text="{Binding Phone, Mode=TwoWay}"/>
                <Label Content="Address"/>
                <TextBox Text="{Binding Address, Mode=TwoWay}"/>
                <Label Content="INN"/>
                <TextBox Text="{Binding Inn, Mode=TwoWay}"/>
                <Label Content="Rating"/>
                <TextBox Text="{Binding Rating, Mode=TwoWay}"/>
            </StackPanel>
        </ScrollViewer>
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="Save" Width="75" Margin="5" Click="Save_Click"/>
            <Button Content="Cancel" Width="75" Margin="5" Click="Cancel_Click"/>
        </StackPanel>
    </Grid>
</Window>
