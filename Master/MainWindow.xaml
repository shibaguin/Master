<Window x:Class="Master.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Master"
        mc:Ignorable="d"
        Title="MainWindow" Height="492" Width="1000">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <DataGrid x:Name="MainDataGrid"
                  Grid.Row="0"
                  Margin="5"
                  HorizontalAlignment="Stretch"
                  VerticalAlignment="Stretch"
                  d:ItemsSource="{d:SampleData ItemCount=5}"
                  AutoGenerateColumns="True"/>

        <StackPanel Grid.Row="1"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="5">
            <Button x:Name="AddPartner"
                    Content="Add Partner"
                    Padding="10,5"
                    Margin="5,0,0,0"
                    Click="AddPartner_Click"/>
            <Button x:Name="EditPartners"
                    Content="Edit Partner"
                    Padding="10,5"
                    Margin="5,0,0,0"
                    Click="EditPartners_Click"/>
        </StackPanel>
    </Grid>
</Window>
