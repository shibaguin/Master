<Window x:Class="Master.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Master"
        mc:Ignorable="d"
        Title="MainWindow" Height="540" Width="1000"
        Icon="/Master;component/Assets/logo.ico">
    <DockPanel>
        <!-- Header with logo and app title -->
        <Border Background="{StaticResource AccentBrush}" Height="60" DockPanel.Dock="Top">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="10">
                <Image Source="/Master;component/Assets/logo.png" Height="40"/>
                <TextBlock Text="Контроль партнёров" FontSize="20" FontWeight="SemiBold" Foreground="White" VerticalAlignment="Center" Margin="10,0,0,0"/>
            </StackPanel>
        </Border>
        <Frame x:Name="MainFrame" NavigationUIVisibility="Hidden"/>
    </DockPanel>
</Window>
